<%= render 'layouts/flash_tasks' %>
<h2>タスクの作成</h2>

<%= form_for(@task) do |form| %>
  <%= form.label :list, 'タスク' %>
  <%= form.text_field :list %>
  <%= form.label :percent, '進捗率'  %>
  <%= form.select :percent, [[5, 5], [10, 10], [15, 15], [20, 20],[25, 25], [30, 30], [35, 35], [40, 40], [45, 45], [50, 50], [55, 55], [60, 60], [65, 65], [70, 70], [75, 75], [80, 80], [85, 85], [90, 90], [95, 95], [100, 100]], include_blank: "進捗率" %>％
  <%= form.submit '作成' %>
<% end %>

<%= link_to 'タスク一覧に戻る', tasks_path %>